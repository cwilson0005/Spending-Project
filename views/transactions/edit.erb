<h2>Edit Transaction: <%= @transaction.id %></h2>
<form method="POST" action="/transactions/<%= @transaction.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="date">Date:</label>
      <input type="date" name="date" id="date"/>
    </div>

    <div class="form-el">
      <label for="merchant_select">Select Merchant:</label>
      <select name="merchant_id" id="merchant_select">
        <% @merchants.each do |merchant| %>
          <% if merchant.id == @transaction.merchant_id %>
            <option value=<%= merchant.id %> selected><%= merchant.name.capitalize %></option>
          <% else %>
            <option value=<%= merchant.id %>><%= merchant.name.capitalize %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="tag_select">Select Tag:</label>
      <select name="tag_id" id="tag_select" selected="<%= @transaction.tag_id  %>">
        <% @tags.each do |tag| %>
          <% if tag.id == @transaction.tag_id %>
            <option value=<%= tag.id %> selected><%= tag.name %></option>
          <% else %>
            <option value=<%= tag.id %>><%= tag.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="amount">Amount: Â£</label>
      <input type="number" step="0.01" min="0.00" name="amount" id="amount" value="<%= @transaction.amount %>"/>
    </div>

    <div class="form-el">
      <label for="time">Time:</label>
      <input type="time" name="time" id="time"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Transaction"/>
    </div>

  </div>
</form>
