  <% @transactions.each do |transaction| %>

  <div class="transaction">
    <p>Date: <%= transaction.transaction_date %> | Merchant: <%= transaction.merchant_name %> | Tag: <%= transaction.tag_name %> | Amount: Â£<%= transaction.amount %> | Timestamp: <%= transaction.transaction_time %><a href="/transactions/<%= transaction.id %>"> - View</a><a href="/transactions/<%= transaction.id %>/edit"> - Edit</a></p>
