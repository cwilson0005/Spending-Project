<h2>Edit Account: <%= @account.format_name %></h2>
<form method="POST" action="/account">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="first_name">First Name: </label>
      <input type="text" name="first_name" id="first_name" value="<%= @account.first_name %>"/>
    </div>

    <div class="form-el">
      <label for="sur_name">Sur Name: </label>
      <input type="text" name="sur_name" id="sur_name" value="<%= @account.sur_name%>"/>
    </div>

    <div class="form-el">
      <label for="budget">Budget: Â£</label>
      <input type="number" step="0.01" min="0.00" name="budget" id="budget" value="<%= @account.budget %>"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Account"/>
    </div>

  </div>
</form>
